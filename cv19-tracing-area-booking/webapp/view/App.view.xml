<mvc:View 
  xmlns="sap.f" 
  xmlns:mvc="sap.ui.core.mvc" 
  displayBlock="true" 
  height="100%">
	<FlexibleColumnLayout
    id="idAppControl"  
		autoFocus="false"
    busy="{/busy}"
    busyIndicatorDelay="0" 
		stateChange="onStateChanged"
		restoreFocusOnBackNavigation="true"
		layout="{/layout}"
		backgroundDesign="Translucent"
    />
</mvc:View>